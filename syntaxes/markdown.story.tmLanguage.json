{
  "fileTypes": [],
  "injectionSelector": "meta.paragraph.markdown",
  "scopeName": "markdown.story",
  "patterns": [
    {
      "include": "#letter"
    },
    {
      "include": "#support"
    }
  ],
  "repository": {
    "letter": {
      "match": "(?<=\\s|^)@[^\\s]+(?=\\s|$)",
      "name": "keyword.story.tag"
    },
    "support": {
      "match": "(?<=\\s|^)#[^\\s]+(?=\\s|$)",
      "name": "support.class.story.anchor"
    }
  }
}
