{
  "name": "vscode-writing",
  "displayName": "vscode-writing",
  "description": "vscode writing tool",
  "license": "MIT",
  "version": "0.1.0",
  "publisher": "fantasy",
  "author": "Jerry Wang <x.jerry.wang@gmail.com>",
  "bugs": {
    "url": "https://github.com/cwxyz007/vscode-writing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwxyz007/vscode-writing.git"
  },
  "engines": {
    "vscode": "^1.63.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:memfs",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "markdown.story",
        "path": "./syntaxes/markdown.story.tmLanguage.json",
        "injectTo": [
          "meta.paragraph.markdown",
          "text.html.markdown"
        ]
      }
    ],
    "commands": [
      {
        "command": "memfs.workspaceInit",
        "title": "Setup Workspace",
        "category": "MemFS"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "memfs.workspaceInit",
          "when": "workbenchState != workspace"
        }
      ]
    },
    "resourceLabelFormatters": [
      {
        "scheme": "memfs",
        "formatting": {
          "label": "${path}",
          "separator": "/",
          "workspaceSuffix": "MemFS"
        }
      }
    ]
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r",
    "vscode:prepublish": "tsup src/extension.ts --sourcemap",
    "dev": "tsup src/extension.ts --sourcemap --watch",
    "build": "tsup src/extension.ts --sourcemap",
    "version": "yarn changelog && git add CHANGELOG.md"
  },
  "peerDependencies": {
    "vscode": "*"
  },
  "devDependencies": {
    "@0x-jerry/eslint-config": "^0.1.3",
    "@types/path-browserify": "^1.0.0",
    "@types/vscode": "^1.63.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^8.5.0",
    "path-browserify": "^1.0.1",
    "tsup": "^5.11.6",
    "typescript": "^4.5.4"
  }
}
