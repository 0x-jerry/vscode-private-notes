{
  "name": "vscode-writing",
  "displayName": "vscode-writing",
  "description": "vscode writing tool",
  "license": "MIT",
  "version": "0.1.0",
  "publisher": "fantasy",
  "author": "Jerry Wang <x.jerry.wang@gmail.com>",
  "bugs": {
    "url": "https://github.com/cwxyz007/vscode-writing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwxyz007/vscode-writing.git"
  },
  "engines": {
    "vscode": "^1.63.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:encrypt",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "markdown.story",
        "path": "./syntaxes/markdown.story.tmLanguage.json",
        "injectTo": [
          "meta.paragraph.markdown",
          "text.html.markdown"
        ]
      }
    ],
    "configuration": {
      "title": "TypeScript",
      "properties": {
        "writing.encrypt.password": {
          "readOnly": true,
          "type": [
            "string"
          ],
          "default": "",
          "description": "Encrypted password."
        }
      }
    },
    "commands": [
      {
        "command": "encrypt.initWorkspace",
        "title": "Setup Workspace",
        "category": "Encrypt"
      },
      {
        "command": "encrypt.changePassword",
        "title": "Set or change password",
        "category": "Encrypt"
      },
      {
        "command": "encrypt.encryptAllFiles",
        "title": "Encrypt all files",
        "category": "Encrypt"
      },
      {
        "command": "encrypt.decryptAllFiles",
        "title": "Decrypt all files",
        "category": "Encrypt"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "encrypt.initWorkspace",
          "when": "workbenchState != workspace"
        }
      ]
    },
    "resourceLabelFormatters": [
      {
        "scheme": "encrypt",
        "formatting": {
          "label": "${path}",
          "separator": "/",
          "workspaceSuffix": "Encrypt"
        }
      }
    ]
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r",
    "vscode:prepublish": "tsup src/extension.ts --sourcemap",
    "dev": "tsup src/extension.ts --sourcemap --watch",
    "build": "tsup src/extension.ts --sourcemap",
    "version": "yarn changelog && git add CHANGELOG.md",
    "test": "jest"
  },
  "peerDependencies": {
    "vscode": "*"
  },
  "devDependencies": {
    "@0x-jerry/eslint-config": "^0.2.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.2",
    "@types/vscode": "^1.63.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.32.0",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsup": "^5.11.7",
    "typescript": "^4.5.4"
  }
}
